<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"

    android:id="@+id/activity_main2"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/dreamy">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/android_multichoices_quiz"
        android:layout_marginTop="60dp"
        android:id="@+id/textView"
        android:textColor="#9C27B0"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shutterstock"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:contentDescription="TODO" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/a44e3814607fa81" />

    <Button
        android:id="@+id/btn_bacajuzamma"
        android:layout_width="295dp"
        android:layout_height="78dp"
        android:layout_alignBottom="@id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="85dp"
        android:background="#00ffffff"
        android:clickable="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="50dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/contact_us" />

    <Button
        android:id="@+id/btn_tajwid"
        android:layout_width="319dp"
        android:layout_height="77dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginLeft="70dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="55dp"
        android:background="#00ffffff"
        android:clickable="true" />
</RelativeLayout>